{
  "name": "kiro-web-mind",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "analyze": "ANALYZE=true npm run build",
    "build:profile": "next build --profile",
    "build:debug": "next build --debug",
    "perf:lighthouse": "lighthouse http://localhost:3000 --output=json --output-path=./lighthouse-report.json",
    "perf:bundle-analyzer": "npm run analyze && open bundle-analyzer-report.html",
    "build:production": "NODE_ENV=production next build && next export",
    "deploy:firebase": "npm run build:production && firebase deploy --only hosting",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:firestore": "firebase deploy --only firestore:rules,firestore:indexes",
    "deploy:all": "npm run build:production && firebase deploy",
    "extension:build": "node scripts/build-extension.js",
    "extension:package": "node scripts/package-extension.js",
    "extension:deploy": "npm run extension:build && npm run extension:package",
    "predeploy": "npm run test:ci && npm run lint && npm run build:production"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "@types/d3": "^7.4.3",
    "critters": "^0.0.23",
    "d3": "^7.8.5",
    "firebase": "^10.5.0",
    "framer-motion": "^10.16.0",
    "idb": "^8.0.3",
    "next": "14.0.0",
    "next-themes": "^0.2.1",
    "react": "^18",
    "react-dom": "^18",
    "react-flow-renderer": "^10.3.17",
    "reactflow": "^11.11.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^13.4.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10",
    "eslint": "^8",
    "eslint-config-next": "14.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8",
    "tailwindcss": "^3.3.0",
    "typescript": "^5"
  }
}
